<div class="container mt-3">
  <div class="row">
    <div class="col-10 ">
    <h1>Add a new restaurant to the list</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name%>
        <%= f.input :address%>
        <%= f.input :phone_number%>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
        <%= f.submit "Add restaurant", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
